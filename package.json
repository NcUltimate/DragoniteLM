{
  "name": "dragonitelm",
  "version": "1.0.0",
  "description": "Lightweight RAG Desktop Application - A NotebookLM-inspired proof-of-concept",
  "main": "src/main/main.js",
  "type": "module",
  "scripts": {
    "start": "concurrently \"npm run chroma\" \"npm run electron\"",
    "electron": "electron . --no-sandbox",
    "electron:dev": "electron . --dev --no-sandbox",
    "chroma": "chroma run --host localhost --port 8000 --path ./data/chroma",
    "build": "electron-builder",
    "build:linux": "electron-builder --linux",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win"
  },
  "keywords": [
    "electron",
    "rag",
    "langchain",
    "notebook",
    "ai"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@langchain/core": "^0.3.0",
    "@langchain/openai": "^0.3.0",
    "chromadb": "^1.8.1",
    "cohere-ai": "^7.20.0",
    "dotenv": "^17.2.3",
    "electron-store": "^8.2.0",
    "langchain": "^0.3.0",
    "pdf-parse": "^1.1.1"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "wait-on": "^9.0.3"
  },
  "build": {
    "appId": "com.dragonitelm.app",
    "productName": "DragoniteLM",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "config/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
